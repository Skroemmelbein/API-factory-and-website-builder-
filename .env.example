# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/api_factory_db"
# Alternative database URLs:
# DATABASE_URL="mysql://username:password@localhost:3306/api_factory_db"
# DATABASE_URL="sqlite:./dev.db"
# DATABASE_URL="mongodb://localhost:27017/api_factory_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Documentation
API_DOCS_PATH=/api-docs